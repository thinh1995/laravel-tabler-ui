{
  "name": "thinhnx/laravel-tabler-ui",
  "description": "Tabler UI Blade for Laravel",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Thinhnx\\LaravelTablerUI\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Thinhnx\\LaravelTablerUI\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Nguyen Xuan Thinh",
      "email": "cuongthinhtuan2006@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/framework": "^v10|^v11|^v12"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0",
    "squizlabs/php_codesniffer": "^3.11",
    "jaschilz/php-coverage-badger": "^2.0",
    "phpunit/phpunit": "^10.5"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Thinhnx\\LaravelTablerUI\\LaravelTablerUIProvider"
      ]
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs",
    "badge-coverage": "XDEBUG_MODE=coverage phpunit && php-coverage-badger ./tests/_reports/clover.xml ./tests/_reports/badge-coverage.svg"
  }
}
