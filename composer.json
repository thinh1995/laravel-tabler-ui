{
  "name": "thinhnx/laravel-tabler-ui",
  "description": "Tabler UI Blade for Laravel",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Lucifer\\LaravelTablerUi\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lucifer\\LaravelTablerUi\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Nguyen Xuan Thinh",
      "email": "cuongthinhtuan2006@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/framework": "^v10|^v11|^v12"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0",
    "squizlabs/php_codesniffer": "^3.11",
    "pestphp/pest": "^2.36",
    "jaschilz/php-coverage-badger": "^2.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Lucifer\\LaravelTablerUi\\LaravelTablerUiProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest",
    "phpcs": "phpcs",
    "badge-coverage": "XDEBUG_MODE=coverage phpunit && php-coverage-badger ./clover.xml ./badge-coverage.svg"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
